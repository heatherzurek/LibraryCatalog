<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title></title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>


  @using LibraryCatalog.Models;
  <div class="libphoto">
  <center><img src="https://www.rachaelwhitaker.com/images/Portfolio/stjohns" alt="bridge image"></center>
</div>
  <div class="container">


    <h2>@Model["author"].Name</h2>
    <hr />

    @if (@Model["authorBooks"].Count != 0)
    {
      <h4>Here are the books available by this author:</h4>
      <ul>
      @foreach (var book in @Model["authorBooks"])
      {
        <li>@book.Title</li>
      }
      </ul>
    }

    <h4>Add a book to this author:</h4>

    <form action='/authors/@Model["author"].Id/books/new' method='post'>
      <label for='bookId'>Select a book</label>
      <select id='bookId' name='bookId' type='text'>

        @foreach (var book in @Model["allBooks"])
        {
          <option value='@book.Id'>@book.Title</option>
        }

      </select>
      <button type='submit' class="btn btn-dark">Add</button>
    </form>

    <p><a href="/">Return to Main Page</a></p>

  </div>

</body>
</html>
